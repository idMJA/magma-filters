{
	"name": "magma-filters",
	"version": "1.0.0",
	"description": "A plugin that allows you to set filters faster in Magmastream",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"builds": "tsc",
		"lint": "eslint --ext .ts ./src",
		"ci": "run-s lint build"
	},
	"devDependencies": {
		"@favware/rollup-type-bundler": "^4.0.0",
		"@types/node": "^22.10.10",
		"@typescript-eslint/eslint-plugin": "^8.21.0",
		"@typescript-eslint/parser": "^8.21.0",
		"eslint": "^9.18.0",
		"npm-run-all": "^4.1.5",
		"typedoc": "^0.27.6",
		"typedoc-plugin-no-inherit": "^1.5.0",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"magmastream": "^2.7.5",
		"tslib": "^2.8.1"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		]
	},
	"keywords": [
		"plugin",
		"magmastream"
	],
	"repository": {
		"url": "https://github.com/Kenver123/magma-filters"
	},
	"homepage": "https://github.com/Kenver123/magma-filters#readme",
	"author": "Kenver",
	"license": "Apache-2.0"
}
